<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalculatorApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Light Mode -->
    <style name="BACKGROUND">
        <item name="android:background">@color/dark_mode_background</item>
    </style>

    <style name="NUMBER_BUTTON">
        <item name="android:background">@color/number_button_dark_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PROCESS_BUTTON">
        <item name="android:background">@drawable/process_btn_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="RESULT_TEXT">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>